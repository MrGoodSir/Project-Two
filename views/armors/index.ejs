<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title>Armors</title>
</head>


<nav class="armorIndexHeaderButtons">

    <div class="armorIndexBack">
        <form action="/home">
            <input class="armorIndexHeaderButton" type="submit" value="Back">
        </form>
    </div>

    <div class="armorIndexHome">
        <form action="/home">
            <input class="armorIndexHeaderButton" type="submit" value="Home">
        </form>
    </div>

    <div class="armorIndexNew">
        <form action="/home/armor/new">
            <input class="armorIndexHeaderButton" type="submit" value="Create New Armor">
        </form>
    </div>

    <div class="armorIndexRefresh">
        <form action="/home/armor/seed">
            <input class="armorIndexHeaderButton" type="submit" value="Refresh the product">
        </form>
    </div>


</nav>

<body class="armorsIndexBody">
    <h1 class="armorIndexH1">Our Armor</h1>


    <ul>
        <% armors.forEach(armor=> { %>


            <li>





                <div style="color: rgb(104, 104, 126); padding-bottom: 10px;">
                    <%= armor.name %> Armor<br></div>
                <a href="/home/armor/<%=armor._id%>" style="text-decoration: none; color: black;">
                    <div class="armorIndexImage"><img src="<%= armor.image %>" style="max-height: 450px; max-width: 450px;"></div><br>

                </a>

                <div class="armorIndexDeleteEdit">
                    <div class="armorIndexDeleteButton">
                        <form action="/home/armor/<%=armor.id%>?_method=DELETE" method="POST">
                            <input class="armorIndexDelete" type="submit" value="DELETE">
                        </form>
                    </div>

                    <div clas="armorIndexEditButton">
                        <form action="/home/armor/<%=armor.id%>/edit">
                            <input class="armorIndexEdit" type="submit" value="EDIT">
                        </form>
                    </div>
                </div>



            </li>

            <br>

            <% }) %>







    </ul>

</body>



</html>