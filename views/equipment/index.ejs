<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title>Equipment</title>
</head>


<nav>

    <form action="/home/equipment/seed">
        <input type="submit" value="Refresh the product">
    </form>


    <form action="/home/equipment/new">
        <input type="submit" value="Create New Equipment">
    </form>

    <form action="/home">
        <input type="submit" value="Back">
    </form>

</nav>

<body>
    <h1>This is the index equipment page</h1>

    <ul>
        <% equipments.forEach(equipment=> { %>
            <li>




                <a href="/home/equipment/<%=equipment._id%>" style="text-decoration: none; color: black;">
                    <%= equipment.name %> <br>
                        <img src="<%= equipment.image %>" style="max-height: 250px; max-width: 250px;">
                </a>

                <form action="/home/equipment/<%= equipment.id %>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE">
                </form>

                <form action="/home/equipment/<%=equipment.id%>/edit">
                    <input type="submit" value="EDIT">
                </form>



            </li>
            <% }) %>







    </ul>


</body>

</html>